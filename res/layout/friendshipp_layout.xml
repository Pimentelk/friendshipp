<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/shipp_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:layout_toLeftOf="@+id/shipp_friend_button"
        android:src="@drawable/com_facebook_profile_default_icon" />

    <ImageView
        android:id="@+id/receive_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shipp_friend"
        android:layout_toRightOf="@+id/shipp_friend_button"
        android:src="@drawable/com_facebook_profile_default_icon" />

    <Button
        android:id="@+id/shipp_friend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipp_friend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="@string/shipp_button" />

</RelativeLayout>
